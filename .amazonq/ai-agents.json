{
  "aiAgents": {
    "MoveContractGen": {
      "role": "Move Smart Contract Generator",
      "responsibilities": ["Contract scaffolding", "Module generation", "Static analysis"],
      "triggers": ["move_contracts/**/*.move", "Move.toml"],
      "modules": ["token", "arena", "tank", "treasury"],
      "reviewCriteria": ["Security vulnerabilities", "Gas efficiency", "Move best practices"]
    },
    "FrontendGen": {
      "role": "Frontend Generator with Phaser Integration",
      "responsibilities": ["Wallet UI", "Phaser.js integration", "Match interface"],
      "triggers": ["frontend/src/**/*.tsx", "frontend/src/**/*.jsx"],
      "reviewCriteria": ["Wallet integration", "Game performance", "UI/UX"]
    },
    "SDKIntegrator": {
      "role": "Sui SDK Integration Specialist",
      "responsibilities": ["Transaction builders", "Sui SDK scripts", "Blockchain integration"],
      "triggers": ["scripts/**/*.ts", "frontend/src/sdk/**"],
      "reviewCriteria": ["Transaction safety", "Error handling", "Performance"]
    },
    "QA-Bot": {
      "role": "Automated Testing & Audit Bot",
      "responsibilities": ["Move tests", "Jest tests", "Security audits", "Integration tests"],
      "triggers": ["**/*.test.*", "**/tests/**", "**/__tests__/**"],
      "reviewCriteria": ["Test coverage", "Security validation", "Edge cases"]
    },
    "CI/CD-Manager": {
      "role": "Deployment Automation Manager",
      "responsibilities": ["GitHub Actions", "Amplify deployment", "Sui testnet deployment"],
      "triggers": [".github/workflows/**", "amplify.yml", "deploy/**"],
      "reviewCriteria": ["Build success", "Deployment safety", "Rollback capability"]
    }
  },
  "workflowRules": {
    "codeReview": {
      "minApprovals": 2,
      "requiredAgents": ["MoveContractGen", "QA-Bot"],
      "autoMerge": false
    },
    "deployment": {
      "requiresAllTests": true,
      "stagingFirst": true,
      "rollbackEnabled": true,
      "targets": ["Amplify", "Sui Testnet"]
    },
    "aiTasks": {
      "contractScaffolding": true,
      "testGeneration": true,
      "securityAuditing": true,
      "documentationUpdates": true
    }
  }
}